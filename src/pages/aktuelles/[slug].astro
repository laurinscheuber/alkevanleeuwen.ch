---
import Layout from '../../layouts/Layout.astro';
import { client, urlFor } from '../../lib/sanity';
import { PortableText } from 'astro-portabletext';

const { slug } = Astro.params;
const project = await client.fetch(`*[_type == "project" && slug.current == $slug][0]{
  title,
  description,
  date,
  mainImage
}`, { slug });

if (!project) return Astro.redirect('/404');

const dateStr = project.date ? new Date(project.date).toLocaleDateString('de-CH', {
  day: '2-digit', month: '2-digit', year: 'numeric',
  hour: '2-digit', minute: '2-digit'
}) : null;
---

<Layout title={`${project.title} - Aktuelles - Physiotherapie Alke van Leeuwen`}>
  <article>
    {project.mainImage && (
      <div class="hero-image-container">
        <img 
          src={urlFor(project.mainImage).width(1200).height(600).url()} 
          alt={project.title} 
          class="hero-image"
        />
        <div class="hero-overlay"></div>
      </div>
    )}
    
    <div class="container header-wrapper">
      <header class="project-header glass-card">
        <h1 class="project-title">{project.title}</h1>
        {dateStr && <time class="project-date">{dateStr} Uhr</time>}
      </header>
    </div>

    <div class="container body-container">
      <div class="project-body">
        {project.description ? (
          <PortableText value={project.description} />
        ) : (
          <p>Keine Beschreibung verfügbar.</p>
        )}
      </div>
      
      <div class="back-link">
        <a href="/aktuelles">← Zurück zur Übersicht</a>
      </div>
    </div>
  </article>
</Layout>

<style>
  .hero-image-container {
    position: relative;
    width: 100%;
    height: 60vh;
    min-height: 400px;
    max-height: 600px;
    overflow: hidden;
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(to top, rgba(0,0,0,0.5), transparent);
    pointer-events: none;
  }
  
  .header-wrapper {
    max-width: 900px;
    margin-top: -6rem; /* Overlap hero */
    position: relative;
    z-index: 2;
    padding: 0 1.5rem;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.85); /* Milky / Glassmorphism */
    backdrop-filter: blur(12px);
    border-radius: 30px;
    box-shadow: var(--shadow-lg);
    border: 1px solid rgba(255, 255, 255, 0.5);
    padding: 2.5rem 2rem;
    text-align: center;
  }
  
  .project-title {
    font-size: 2.5rem;
    color: var(--color-primary-dark);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  
  .project-date {
    display: block;
    font-size: 1.1rem;
    color: var(--color-text-light);
    font-weight: 500;
    margin-top: 0.5rem;
  }
  
  .body-container {
    max-width: 800px;
    padding: 3rem 1.5rem;
  }

  .project-body {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
  }
  
  /* Portable Text Styling targets */
  .project-body :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .project-body :global(h2) {
    font-size: 1.8rem;
    color: var(--color-primary-dark);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .project-body :global(ul) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    list-style: disc;
  }
  
  .project-body :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .back-link {
    margin-top: 4rem;
    text-align: center;
    border-top: 1px solid var(--color-secondary);
    padding-top: 2rem;
  }
  
  .back-link a {
    color: var(--color-text-light);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }
  
  .back-link a:hover {
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .hero-image-container {
      height: 40vh;
    }
    
    .header-wrapper {
      margin-top: -4rem;
    }
    
    .glass-card {
        padding: 1.5rem 1rem;
    }

    .project-title {
      font-size: 1.8rem;
    }
    
    .body-container {
      padding: 2rem 1rem;
    }
  }
</style>
